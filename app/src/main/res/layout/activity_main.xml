<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_margin="10dp"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/texttitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tic       Toe"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:backgroundTint="#309C3E"
        android:textColor="@color/black"
        android:fontFamily="@font/barrio"/>

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/texttitle"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/text_player1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barrio"
            android:text="Player-1 Score"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="23dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_player2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Player-2 Score"
            android:textSize="23dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:fontFamily="@font/barrio"
            android:layout_toRightOf="@id/text_player1"/>

        <TextView
            android:id="@+id/score_Player1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barrio"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="26dp"
            android:textStyle="bold"
            android:layout_below="@id/text_player1"/>

        <TextView
            android:id="@+id/score_Player2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barrio"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="26dp"
            android:textStyle="bold"
            android:layout_below="@id/text_player2"
            android:layout_toRightOf="@id/score_Player1"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/relative_layout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn0"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_marginHorizontal="0dp"
                android:layout_marginBottom="0dp"
                android:textSize="26dp" />

            <Button
                android:id="@+id/btn1"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_marginHorizontal="0dp"
                android:layout_marginBottom="0dp"
                android:textSize="26dp" />

            <Button
                android:id="@+id/btn2"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_marginHorizontal="0dp"
                android:layout_marginBottom="0dp"
                android:textSize="26dp" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn3"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_marginHorizontal="0dp"
            android:layout_marginBottom="0dp"
            android:textSize="26dp" />

        <Button
            android:id="@+id/btn4"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_marginHorizontal="0dp"
            android:layout_marginBottom="0dp"
            android:textSize="26dp" />

        <Button
            android:id="@+id/btn5"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_marginHorizontal="0dp"
            android:layout_marginBottom="0dp"
            android:textSize="26dp" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn6"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_marginHorizontal="0dp"
            android:layout_marginBottom="0dp"
            android:textSize="26dp" />

        <Button
            android:id="@+id/btn7"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_marginHorizontal="0dp"
            android:layout_marginBottom="0dp"
            android:textSize="26dp" />

        <Button
            android:id="@+id/btn8"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_marginHorizontal="0dp"
            android:layout_marginBottom="0dp"
            android:textSize="26dp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_play_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_linear"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="103dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="103dp"
        android:backgroundTint="#309C3E"
        android:fontFamily="@font/barrio"
        android:text="Play Again"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_play_again"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="103dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="103dp"
        android:backgroundTint="#AB0F2C"
        android:fontFamily="@font/barrio"
        android:text="Reset Game"
        android:textSize="24dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="115dp"
        android:layout_height="52dp"
        android:layout_alignBottom="@+id/texttitle"
        android:layout_marginStart="143dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="-2dp"
        app:srcCompat="@drawable/taco" />

</RelativeLayout>